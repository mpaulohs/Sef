@{
    ViewData["Title"] = "Confirm Email";
    Layout = "~/views/shared/_layoutemailconfirmation.cshtml";

}
<div class="lockscreen-logo">
    <a href="#"><b>Admin</b>Saed</a>
</div>
<!-- User name -->
<!-- START LOCK SCREEN ITEM -->
<div class="lockscreen-item">
    <!-- lockscreen image -->
    <div class="lockscreen-image">
        <img src="~/img/user1-128x128.jpg" alt="User Image">
    </div>
    <!-- /.lockscreen-image -->
    <!-- lockscreen credentials (contains the form) -->
    <form class="lockscreen-credentials">
        <div class="input-group">           
            &nbsp; &nbsp;<label>@ViewBag.Email</label>
            <div class="input-group-btn">
                <a asp-action="Login" asp-controller="GperfilAccount" class="btn"><i class="fa fa-arrow-right text-muted"></i></a>
            </div>
        </div>
    </form>
    <!-- /.lockscreen credentials -->
</div>
<!-- /.lockscreen-item -->
<div class="help-block text-center">
    Obrigado pela confirmação do seu email
</div>
<div class="text-center">
    <a asp-action="Login" asp-controller="GperfilAccount">Click aqui para logar</a>
</div>
